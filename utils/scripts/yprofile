export YOS=`uname | awk '{print tolower($0)}'``uname -m`

echo "Running on OS: $YOS"

case $YOS in
  linux*) YDIR=$(pwd)/deps;;
  darwin*) YDIR=$HOME/ydir;;
  *) YDIR=/ydir;;
esac

mkdir -p $YDIR 
cp -r scripts $YDIR

[ -d "$YDIR" ] && cd $YDIR || { echo "invalid YDIR. Yenv not set. "; return 1; }
[ -f "$YDIR/scripts/yenv" ] && source $YDIR/scripts/yenv
export YDIR

